<Window x:Class="Flappy_Bird_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Flappy Bird Game - by Hashi" 
        Height="600" 
        Width="600" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FocusManager.FocusedElement="{Binding ElementName=MyCanvas}" 
        KeyDown="Canvas_KeyisDown" 
        KeyUp="Canvas_KeyisUp">

    <Window.Resources>
        <DropShadowEffect x:Key="ScoreShadow" 
                          BlurRadius="5" 
                          Color="Black" 
                          Opacity="0.6" 
                          ShadowDepth="2"/>
    </Window.Resources>

    <Grid>
        <!-- Background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#87CEEB" Offset="0"/>
                <GradientStop Color="#E0F6FF" Offset="0.5"/>
                <GradientStop Color="#87CEEB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main game canvas -->
        <Canvas Name="MyCanvas" 
                Focusable="True" 
                Background="Transparent"
                ClipToBounds="True">

            <!-- Clouds Layer -->
            <Image Height="145" 
                   Width="207" 
                   Source="images/clouds.png" 
                   Canvas.Left="100" 
                   Canvas.Top="50" 
                   Tag="clouds"
                   Opacity="0.8"/>

            <Image Height="145" 
                   Width="207" 
                   Source="images/clouds2.png" 
                   Canvas.Left="400" 
                   Canvas.Top="120" 
                   Tag="clouds"
                   Opacity="0.8"/>

            <!-- Pipes Set 1 - Top pipe first, then bottom pipe -->
            <Image Height="400" 
                   Width="75" 
                   Source="images/pipeTop.png" 
                   Canvas.Left="500" 
                   Canvas.Top="-200" 
                   Tag="obs1"
                   Stretch="Fill"/>

            <Image Height="400" 
                   Width="75" 
                   Source="images/pipeBottom.png"  
                   Canvas.Left="500" 
                   Canvas.Top="350" 
                   Tag="obs1"
                   Stretch="Fill"/>

            <!-- Pipes Set 2 -->
            <Image Height="400" 
                   Width="75" 
                   Source="images/pipeTop.png" 
                   Canvas.Left="800" 
                   Canvas.Top="-150" 
                   Tag="obs2"
                   Stretch="Fill"/>

            <Image Height="400" 
                   Width="75" 
                   Source="images/pipeBottom.png"  
                   Canvas.Left="800" 
                   Canvas.Top="380" 
                   Tag="obs2"
                   Stretch="Fill"/>

            <!-- Pipes Set 3 -->
            <Image Height="400" 
                   Width="75" 
                   Source="images/pipeTop.png" 
                   Canvas.Left="1100" 
                   Canvas.Top="-250" 
                   Tag="obs3"
                   Stretch="Fill"/>

            <Image Height="400" 
                   Width="75" 
                   Source="images/pipeBottom.png"  
                   Canvas.Left="1100" 
                   Canvas.Top="320" 
                   Tag="obs3"
                   Stretch="Fill"/>

            <!-- Ground line -->
            <Rectangle Height="10" 
                       Width="600" 
                       Fill="#8B4513" 
                       Canvas.Top="590"/>

            <!-- Flappy Bird -->
            <Image Stretch="Fill" 
                   Name="flappyBird" 
                   Height="40" 
                   Width="50" 
                   Source="images/flappyBird.png" 
                   Canvas.Left="80" 
                   Canvas.Top="200"
                   RenderTransformOrigin="0.5,0.5">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="3" 
                                      Color="Black" 
                                      Opacity="0.4" 
                                      ShadowDepth="2"/>
                </Image.Effect>
            </Image>

            <!-- Score Display -->
            <Border Background="#80000000" 
                    CornerRadius="10" 
                    Padding="15,8"
                    Canvas.Left="10"
                    Canvas.Top="10">
                <Label Name="scoreText" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="White"
                       Content="Score: 0">
                    <Label.Effect>
                        <DropShadowEffect BlurRadius="3" 
                                          Color="Black" 
                                          Opacity="0.8" 
                                          ShadowDepth="1"/>
                    </Label.Effect>
                </Label>
            </Border>

            <!-- Instructions -->
            <TextBlock Canvas.Left="150" 
                       Canvas.Top="500" 
                       FontSize="14" 
                       Foreground="White" 
                       FontWeight="SemiBold">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="2" Color="Black" Opacity="0.8"/>
                </TextBlock.Effect>
                <Run Text="SPACE: Jump  |  R: Restart  |  ESC: Pause"/>
            </TextBlock>

            <!-- Game Over Panel -->
            <Border Name="GameOverPanel"
                    Width="350"
                    Height="280"
                    Background="#F0FFFFFF"
                    CornerRadius="20"
                    Canvas.Left="125"
                    Canvas.Top="160"
                    Visibility="Collapsed"
                    BorderBrush="#FF6B4423"
                    BorderThickness="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" 
                                      Color="Black" 
                                      Opacity="0.5" 
                                      ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center">

                    <!-- Game Over Title -->
                    <TextBlock Text="GAME OVER"
                               FontSize="48"
                               FontWeight="Black"
                               Foreground="#D32F2F"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="3" 
                                              Color="Black" 
                                              Opacity="0.3" 
                                              ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Score Section -->
                    <Border Background="#FFE082"
                            CornerRadius="15"
                            Padding="20,15"
                            Margin="0,10">
                        <StackPanel>
                            <TextBlock Text="YOUR SCORE"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F57C00"
                                       HorizontalAlignment="Center"/>

                            <TextBlock Name="FinalScoreText"
                                       Text="0"
                                       FontSize="56"
                                       FontWeight="Black"
                                       Foreground="#E65100"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="2" 
                                                      Color="#FFF3E0" 
                                                      Opacity="0.8" 
                                                      ShadowDepth="1"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Restart Instructions -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <Border Background="#4CAF50"
                                CornerRadius="8"
                                Padding="12,8">
                            <TextBlock Text="Press R"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                        <TextBlock Text=" to Restart"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#424242"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                </StackPanel>
            </Border>

        </Canvas>
    </Grid>
</Window>